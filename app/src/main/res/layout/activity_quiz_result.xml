<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/coral">

        <EditText
            android:id="@+id/examinee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:fontFamily="@font/eulyoo1945_regular"
            android:gravity="center"
            android:hint="출제자"
            android:minHeight="48dp"
            android:textColorHint="@color/green"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/quiz_num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/quiz_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eulyoo1945_regular"
            android:gravity="center"
            android:hint="고유번호"
            android:minHeight="48dp"
            android:textColorHint="@color/green"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/examinee_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_main_btn_rectangle"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/eulyoo1945_semibold"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quiz_num" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
