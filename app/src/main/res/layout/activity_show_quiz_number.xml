<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/quizNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/eulyoo1945_semibold"
            android:text="고유번호"
            android:textSize="24sp" />

        <android.widget.Button
            android:id="@+id/copyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quizNumberTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_main_btn_rectangle"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/eulyoo1945_regular"
            android:text="복사"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>